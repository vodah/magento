<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="magenest-link">
                <arguments>
                    <argument name="label" translate="true" xsi:type="string">Magenest Movie</argument>
                    <argument name="path" xsi:type="string">magenestmovie</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="magenestactor-link">
                <arguments>
                    <argument name="label" translate="true" xsi:type="string">Magenest Actor</argument>
                    <argument name="path" xsi:type="string">magenestmovie/index/actor</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>